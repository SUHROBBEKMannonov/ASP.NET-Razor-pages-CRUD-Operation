			<span asp-validation-for="modelUsers.LastName" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<label asp-for="modelUsers.PhoneNumber"class="text-info"class="form-label mt-2"></label>
			<label class="form-label mt-2 row-3"> (+998)</label>
			<input style="width:250px" maxlength="9" asp-for="modelUsers.PhoneNumber" class="form-control" placeholder="XX-XXX-XX-XX" />	
			<span asp-validation-for="modelUsers.PhoneNumber" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<label asp-for="modelUsers.Email"class="text-info"class="form-label mt-2"></label>
			<input style="width:250px" type="email" asp-for="modelUsers.Email" class="form-control" placeholder="Enter Email" />		
			   <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
			   <span asp-validation-for="modelUsers.Email" class="text-danger"></span>
		</div>
