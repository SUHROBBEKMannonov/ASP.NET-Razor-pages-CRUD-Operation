<div class="border rounded  p-2 mt-5 mb-5 mx-auto "  style="width:300px" >
	<div class="row pb-2">
		<h2 class="text-primary pl-3">
			Edit User
		</h2>
		
		<div class="mb-3">
			<label asp-for="modelUsers.FirstName"class="text-info"class="form-label mt-2"></label>
			<input  style="width:250px" asp-for="modelUsers.FirstName" class="form-control" placeholder="Enter First Name" />		
			<span asp-validation-for="modelUsers.FirstName" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<label asp-for="modelUsers.LastName"class="text-info"class="form-label mt-2"></label>
